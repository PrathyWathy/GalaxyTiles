#:import menu menu

MainWidget:


<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/bg1.jpg'
    menu_widget: menu_widget
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_text
        font_size: dp(20)
        font_name: 'fonts/Lcd.ttf'
        size_hint: .18, .18
        pos_hint: {"x": 0.29, "top": .85}
    Label:
        text: root.level
        font_size: dp(20)
        font_name: 'fonts/Lcd.ttf'
        size_hint: .18, .18
        pos_hint: {"x": 0.53, "top": .85}
    Label:
        text: root.high_score
        font_size: dp(20)
        font_name: 'fonts/Lcd.ttf'
        size_hint: .18, .18
        pos_hint: {"x": 0.69, "top": 1}
    Label:
        text: root.high
        font_size: dp(20)
        font_name: 'fonts/Lcd.ttf'
        size_hint: .18, .18
        pos_hint: {"x": 0.62, "top": 1}
        
